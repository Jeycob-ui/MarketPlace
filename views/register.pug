extends layout

block styles
  link(rel='stylesheet' href='/registro.css')

block content
  h1 Registrate
  .register-container
    form.register-form(action='/register' method='post')
      - var f = typeof form !== 'undefined' ? form : {}
      .form-row
        label(for='name') Nombre
        input#name(type='text' name='name' required value=(f.name || ''))
      .form-row
        label(for='email') Email
        input#email(type='email' name='email' required value=(f.email || ''))
      .form-row
        label(for='password') Contraseña
        input#password(type='password' name='password' required)
      .form-row
        label(for='confirm_password') Repetir Contraseña
        input#confirm_password(type='password' name='confirm_password' required)
      .form-row
        label(for='role') Rol
        - var sel = f.role || 'comprador'
        select#role(name='role')
          option(value='comprador' selected=(sel === 'comprador')) Comprador
          option(value='vendedor' selected=(sel === 'vendedor')) Vendedor
      .form-actions
        button.btn(type='submit') Registrarse
