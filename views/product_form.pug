extends layout

block content
  if viewOnly
    h1= product.title
    p= product.description
    p Precio: $#{product.price}
    p Stock: #{product.quantity}
    a(href='/products') Volver
  else
    if product && product.id
      h1 Editar producto
      form(action=`/products/${product.id}` method='post')
        input(type='hidden' name='_method' value='PUT')
        label Título
        input(type='text' name='title' value=(product && product.title) || '' required)
        label Descripción
        textarea(name='description') #{(product && product.description) || ''}
        label Precio
        input(type='number' step='0.01' name='price' value=(product && product.price) || '')
        label Stock
        input(type='number' name='quantity' value=(product && product.quantity) || '')
        button(type='submit') Guardar
        a(href='/products') Cancelar
    else
      h1 Nuevo producto
      form(action='/products' method='post')
        label Título
        input(type='text' name='title' value=(product && product.title) || '' required)
        label Descripción
        textarea(name='description') #{(product && product.description) || ''}
        label Precio
        input(type='number' step='0.01' name='price' value=(product && product.price) || '')
        label Stock
        input(type='number' name='quantity' value=(product && product.quantity) || '')
        button(type='submit') Guardar
        a(href='/products') Cancelar
