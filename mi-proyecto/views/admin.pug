extends layout

block content
  h1 Panel de administraci√≥n
  h2 Usuarios
  ul
    each u in users
      li #{u.id} - #{u.name} (#{u.email}) - #{u.role}
  h2 Productos
  ul
    each p in products
      li #{p.id} - #{p.title} - stock: #{p.quantity}
  h2 Pedidos
  ul
    each o in orders
      li Pedido #{o.id} - total: $#{o.total} - estado: #{o.status}
